<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.DatePicker?> 

<BorderPane xmlns:fx="http://javafx.com/fxml" stylesheets="@../css/Main.css">
    <top>
        <HBox alignment="center">
            <Text text="Add Task" styleClass="headline" />
        </HBox>
    </top>
    <center>
        <VBox>
            <Label text="Title" />
            <TextField fx:id="taskTitleTextField" />
            <Label text="Description" />
            <TextArea fx:id="taskDescriptionTextField" />
            <Label text="Pick A Due Date" />
            <DatePicker fx:id="taskDueDatePicker" />
            <Label text="Pick A Reminder" />
            <DatePicker fx:id="taskReminderDatePicker" />
        </VBox>
    </center>
    <bottom>
        <HBox alignment="center">
            <Button text="Cancel" onAction="#onCancel" />
            <Button text="Save" onAction="#onSaveTaskButtonClicked" />
        </HBox>
    </bottom>
</BorderPane>